print("Sözlüğe hoş geldiniz!")
meme_dict = {
    "CRINGE": "Garip ya da utandırıcı bir şey",
    "LOL": "Komik bir şeye verilen cevap",
    "CREEPY": "Korkunç",
    "ROFL": "Bir şakaya karşılık cevap",
    "AGGRO": "Agresifleşmek/sinirlenmek",
}
word = input("Anlamadığınız bir kelime yazın (hepsini büyük harflerle yazın!): ")
if word in meme_dict:
    print(meme_dict[word])
else:
    print("Böyle bir kelime bulunamadı!")
while True:
    print("Ama dur! İstersen sen de kelime ekle.")
    new_word = input("Buraya yazabilirsin: ")
    print("Bu kelimenin anlamı ne?")
    meaning = input("Bu kelimenin anlamı: ")
    meme_dict[new_word.upper()] = meaning
    print(f"{new_word} sözlüğe eklendi.")
    input
